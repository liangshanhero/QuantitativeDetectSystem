<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@drawable/bg2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/linearRegressionModel"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_peach"
            android:text="GNPs-LFIA"
            android:textSize="28dp"
            android:textAllCaps="false"
            android:onClick="colloidalGold" />

        <Button
            android:id="@+id/detect"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/buttom_cyan"
            android:text="TRFMs-LFIA"
            android:textSize="28dp"
            android:textAllCaps="false"
            android:onClick="fluorescentMicrosphere" />

        <Button
            android:id="@+id/button"
            android:layout_width="181dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_pink"
            android:text="History"
            android:textSize="28dp"
            android:textAllCaps="false"
            android:onClick="record" />

        <Button
            android:id="@+id/exit"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_darkblue"
            android:text="Introduction"
            android:textSize="28dp"
            android:textAllCaps="false"
            android:onClick="introduction" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>